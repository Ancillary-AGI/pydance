# Pydance Configuration - Django/Laravel Style Settings
# Copy this file to .env and customize your settings

# Application Settings (Laravel style)
APP_NAME="Pydance Application"
APP_ENV="local"
APP_DEBUG="true"
APP_URL="http://localhost"
APP_KEY=""

# Server Configuration
HOST="127.0.0.1"
PORT="8000"
WORKERS="1"

# Security Settings
SECRET_KEY="your-secure-secret-key-here"
DEBUG="false"
ALLOWED_HOSTS="localhost,127.0.0.1,yourdomain.com"

# Database Configuration (supports both URL and individual settings)
DATABASE_URL="sqlite:///db.sqlite3"
# Or use individual settings:
DB_ENGINE="sqlite"
DB_NAME="db.sqlite3"
DB_HOST="localhost"
DB_PORT=""
DB_USER=""
DB_PASSWORD=""
DB_CHARSET="utf8mb4"
DB_COLLATION="utf8mb4_unicode_ci"

# Email Configuration (Laravel style)
MAIL_MAILER="smtp"
MAIL_HOST="smtp.gmail.com"
MAIL_PORT="587"
MAIL_USERNAME=""
MAIL_PASSWORD=""
MAIL_ENCRYPTION="tls"
MAIL_FROM_ADDRESS="noreply@example.com"
MAIL_FROM_NAME="Pydance App"

# Cache Configuration (Laravel style)
CACHE_DRIVER="memory"
CACHE_HOST="localhost"
CACHE_PORT="6379"
CACHE_PASSWORD=""
CACHE_DATABASE="0"

# Session Configuration (Laravel style)
SESSION_DRIVER="database"
SESSION_LIFETIME="120"
SESSION_ENCRYPT="false"
SESSION_PATH="/"
SESSION_DOMAIN=""

# Logging (Laravel style)
LOG_CHANNEL="stack"
LOG_LEVEL="debug"

# Static Files (Django style)
STATIC_URL="/static/"
STATIC_ROOT="staticfiles"
STATICFILES_DIRS="static"

# Templates (Django style)
TEMPLATES_DIRS="templates"

# Internationalization (Django style)
LANGUAGE_CODE="en-us"
TIME_ZONE="UTC"
USE_I18N="true"
USE_L10N="true"
USE_TZ="true"

# Custom Middleware Aliases (Laravel style)
# Add your custom middleware here
# CUSTOM_MIDDLEWARE_ALIAS="myapp.middleware.CustomMiddleware"

# Custom Settings
# Add any custom settings you need
CUSTOM_SETTING="value"
