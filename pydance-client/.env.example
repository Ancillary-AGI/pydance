# Pydance Client Configuration
# Copy this file to .env and modify as needed

# API Configuration
VITE_API_URL=http://localhost:8000
VITE_API_VERSION=v1
VITE_API_TIMEOUT=10000
VITE_API_RETRIES=3

# WebSocket Configuration
VITE_WS_RECONNECT_INTERVAL=5000
VITE_WS_MAX_RECONNECT_ATTEMPTS=5

# Authentication Configuration
VITE_AUTH_STORAGE_KEY=pydance_auth
VITE_AUTH_REFRESH_THRESHOLD=300000

# Theme Configuration
VITE_DEFAULT_THEME=light
VITE_THEME_STORAGE_KEY=pydance_theme

# Notification Configuration
VITE_NOTIFICATION_POSITION=top-right
VITE_NOTIFICATION_DURATION=5000
VITE_MAX_NOTIFICATIONS=5

# Cache Configuration
VITE_CACHE_TTL=300000
VITE_CACHE_MAX_SIZE=1000

# Development Configuration
VITE_DEBUG=true
VITE_ENABLE_DEVTOOLS=true
VITE_ENABLE_PERFORMANCE_MONITORING=true

# Build Configuration
VITE_BUILD_TARGET=esnext
VITE_BUILD_MINIFY=true
VITE_BUILD_SOURCEMAP=true

# Feature Flags
VITE_ENABLE_WEBSOCKET=true
VITE_ENABLE_AUTH=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_THEME=true
VITE_ENABLE_CACHE=true
VITE_ENABLE_ROUTER=true
VITE_ENABLE_STORES=true
VITE_ENABLE_COMPONENTS=true

# CDN Configuration (for production)
VITE_CDN_URL=https://cdn.example.com/pydance-client
VITE_CDN_VERSION=latest

# Analytics Configuration (optional)
VITE_ANALYTICS_ID=
VITE_ANALYTICS_DEBUG=false

# Error Reporting (optional)
VITE_ERROR_REPORTING_DSN=
VITE_ERROR_REPORTING_ENVIRONMENT=development

# Internationalization
VITE_DEFAULT_LOCALE=en
VITE_SUPPORTED_LOCALES=en,es,fr,de,ja,zh

# Security
VITE_CSP_NONCE=true
VITE_HSTS_MAX_AGE=31536000

# Performance
VITE_LAZY_LOAD_THRESHOLD=1000
VITE_VIRTUAL_SCROLL_THRESHOLD=50
VITE_DEBOUNCE_DELAY=300
VITE_THROTTLE_DELAY=100
