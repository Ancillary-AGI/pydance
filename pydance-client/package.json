{
  "name": "@pydance/client",
  "version": "0.1.0",
  "description": "Ultra-lightweight, signal-based frontend framework for Pydance",
  "keywords": [
    "frontend",
    "framework",
    "reactive",
    "signals",
    "components",
    "typescript",
    "javascript",
    "spa",
    "ssr",
    "pwa",
    "web-components"
  ],
  "author": "Pydance Framework Team <team@pydance.dev>",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./core": {
      "types": "./dist/core/index.d.ts",
      "import": "./dist/core/index.js"
    },
    "./components": {
      "types": "./dist/components/index.d.ts",
      "import": "./dist/components/index.js"
    },
    "./services": {
      "types": "./dist/services/index.d.ts",
      "import": "./dist/services/index.js"
    },
    "./stores": {
      "types": "./dist/stores/index.d.ts",
      "import": "./dist/stores/index.js"
    },
    "./hooks": {
      "types": "./dist/hooks/index.d.ts",
      "import": "./dist/hooks/index.js"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "import": "./dist/utils/index.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ancillary-ai/pydance.git",
    "directory": "pydance-client"
  },
  "bugs": {
    "url": "https://github.com/ancillary-ai/pydance/issues"
  },
  "homepage": "https://pydance.dev/client",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "vite --mode development",
    "build": "vite build --mode production && npm run build:types && npm run build:docs",
    "build:dev": "vite build --mode development",
    "build:types": "tsc --emitDeclarationOnly --outDir dist",
    "build:docs": "node scripts/build-docs.js",
    "build:analyze": "vite build --mode analyze && npx vite-bundle-analyzer dist/stats.html",
    "preview": "vite preview",
    "serve": "npm run build && npm run preview",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "lint": "eslint src --ext .js,.ts,.jsx,.tsx --fix",
    "lint:check": "eslint src --ext .js,.ts,.jsx,.tsx",
    "format": "prettier --write src/**/*.{js,ts,jsx,tsx,json,md}",
    "format:check": "prettier --check src/**/*.{js,ts,jsx,tsx,json,md}",
    "typecheck": "tsc --noEmit",
    "size": "npm run build && size-limit",
    "size:analyze": "npx vite-bundle-analyzer dist/stats.html",
    "docs": "node scripts/build-docs.js",
    "docs:serve": "node scripts/serve-docs.js",
    "clean": "rm -rf dist node_modules/.vite",
    "prepublishOnly": "npm run build && npm run test",
    "release": "npm version patch && npm publish",
    "release:minor": "npm version minor && npm publish",
    "release:major": "npm version major && npm publish"
  },
  "peerDependencies": {
    "typescript": ">=4.9.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "size-limit": "^10.0.0",
    "vite-bundle-analyzer": "^0.7.0",
    "jsdom": "^23.0.0",
    "@types/jsdom": "^21.1.0"
  },
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "8 KB",
      "gzip": true
    },
    {
      "path": "dist/core/index.js",
      "limit": "5 KB",
      "gzip": true
    }
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/",
    "tag": "latest"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/ancillary-ai"
  },
  "sideEffects": false,
  "private": false
}
